{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "typescript",
      "tsconfig": "tsconfig.json",
      "problemMatcher": ["$tsc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "label": "tsc: сборка"
    },
    {
      "type": "shell",
      "command": "ts-node",
      "args": ["${file}"],
      "problemMatcher": [],
      "label": "ts-node: запуск текущего файла",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ]
}
